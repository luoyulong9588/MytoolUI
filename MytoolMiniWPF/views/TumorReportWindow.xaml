<Window x:Class="MytoolMiniWPF.views.TumorReportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MytoolMiniWPF.views"
        xmlns:wd="https://github.com/WPFDevelopersOrg/WPFDevelopers"
        mc:Ignorable="d"
        MouseLeftButtonDown ="Window_MouseLeftButtonDown"
        AllowDrop="True"
    AllowsTransparency="True"
    Background="#A0f6f3f7"
        Opacity="0.95"
    OpacityMask="White"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
        Title="肿瘤报卡" 
        Height="795" Width="1000">
    <Window.Template>
        <ControlTemplate TargetType="Window">
            <Border Padding="64" Background="Transparent">
                <Border Background="White" CornerRadius="10">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="24" Opacity="0.5" />
                    </Border.Effect>
                    <ContentPresenter ClipToBounds="True" />
                </Border>
            </Border>
        </ControlTemplate>

    </Window.Template>
    <Window.Resources>
        <SolidColorBrush x:Key="Requird" Color="Black" />
        <SolidColorBrush x:Key="NotRequird" Color="DarkCyan" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            x:Name="title"
            Grid.Row="0"
            Margin="0,0,2,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="42" />
                <ColumnDefinition Width="42" />
            </Grid.ColumnDefinitions>

            <TextBlock
                Grid.Column="0"
                Margin="0,0,300,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                FontSize="18"
                FontWeight="UltraBold"
                Text="肿 瘤 报 卡" />


            <Button
                x:Name="min"
                Grid.Column="1"
                Width="40"
                Height="34"
                Click="min_Click"
                Content="-"
                FontSize="25"
                ToolTip="最小化">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Width" Value="70" />
                        <Setter Property="Height" Value="25" />
                        <Setter Property="Foreground" Value="Black" />
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Background" Value="WhiteSmoke" />
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border
                                        x:Name="border"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="{TemplateBinding BorderThickness}"
                                        CornerRadius="3"
                                        SnapsToDevicePixels="True">
                                        <TextBlock
                                            HorizontalAlignment="Center"
                                            VerticalAlignment="Center"
                                            Foreground="{TemplateBinding Foreground}"
                                            Text="{TemplateBinding Content}" />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="gray" />
                                            <Setter Property="Foreground" Value="WhiteSmoke" />
                                        </Trigger>
                                        <Trigger Property="IsPressed" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="DarkRed" />
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Button.Style>
            </Button>
            <!--<TextBlock Text="&#xf2df;" FontSize="16" FontFamily="pack://application:,,,/resources/font/#iconfont"/>-->


            <Grid Grid.Column="2">
                <Button
                    x:Name="close"
                    Width="40"
                    Height="34"
                    Click="close_Click"
                    Content="×"
                    FontSize="25"
                    ToolTip="关闭">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Width" Value="70" />
                            <Setter Property="Height" Value="25" />
                            <Setter Property="Foreground" Value="Black" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="Background" Value="WhiteSmoke" />
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border
                                            x:Name="border"
                                            Background="{TemplateBinding Background}"
                                            BorderBrush="{TemplateBinding BorderBrush}"
                                            BorderThickness="{TemplateBinding BorderThickness}"
                                            CornerRadius="3 10 3 3"
                                            SnapsToDevicePixels="True">
                                            <TextBlock
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"
                                                Foreground="{TemplateBinding Foreground}"
                                                Text="{TemplateBinding Content}" />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="red" />
                                                <Setter Property="Foreground" Value="WhiteSmoke" />
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="DarkRed" />
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Button.Style>
                </Button>


            </Grid>

        </Grid>
        <Grid x:Name="panelGrid" Grid.Row="1" Margin="10 5 10 5">
            <Grid.RowDefinitions>
                <RowDefinition Height="110"/>
                <RowDefinition Height="250"/>
                <RowDefinition Height="250"/>
            </Grid.RowDefinitions>
            <Border
            Grid.Row="0"
            Margin="10,5,10,5"
            Background="WhiteSmoke"
            CornerRadius="10">
                <Grid x:Name="cardInfoGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="报告卡信息" FontSize="14" FontFamily="微软雅黑" FontWeight="Heavy" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0 0 0"></TextBlock>
                    <Line X1="20" Y1="30" X2="100" Y2="30" Stroke="Gray" StrokeThickness="1"/>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                        </Grid.RowDefinitions>
              
                        <StackPanel Margin="20 0 0 0" Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
                            <TextBlock Grid.Row="0" Text="是否本院诊断?" VerticalAlignment="Center" />
                            <RadioButton x:Name="radiobtnLocalHospital" Margin="5 0 0 0" Content="是 " IsChecked="True"/>
                            <RadioButton x:Name="radiobtnNotLocalHospital" Margin="0 0 0 0" Content="否" />
                            <TextBlock Text="诊断医院："  Margin="30 0 5 0" VerticalAlignment="Center" />
                            <TextBox x:Name="textBoxDiagnosisHospitalName" VerticalAlignment="Center"  Width="185" Text="文龙街道社区卫生服务中心"/>

                            <TextBlock  VerticalAlignment="Center" Text="治疗情况：" Margin="30 0 0 0"/>
                            <ComboBox x:Name="comboboxCure" 
                                      Margin="0 0 0 0"
                                      Width="70"
                                  materialDesign:HintAssist.Hint="治疗情况"
                                      

                                       
                                 >
                                <ComboBoxItem Content="未治疗"/>
                                <ComboBoxItem Content="治疗"/>
                                <ComboBoxItem Content="不明"/>
                            </ComboBox>
                            <TextBlock  VerticalAlignment="Center" Text="治疗项目：" Margin="30 0 0 0"  Foreground="{StaticResource NotRequird}"/>

                            <ComboBox x:Name="comboboxCureItem"
                                      Margin=" 0 0 0 0"
                                      Width="105">
                                <ComboBoxItem Content="手术治疗"/>
                                <ComboBoxItem Content="放射治疗"/>
                                <ComboBoxItem Content="化学治疗"/>
                                <ComboBoxItem Content="内分泌治疗"/>
                                <ComboBoxItem Content="靶向治疗"/>
                                <ComboBoxItem Content="免疫治疗"/>
                            </ComboBox>
                            
                        </StackPanel>
                        <StackPanel Grid.Row="1" 
                                    Margin=" 20 0 0 0"
                                    Orientation="Horizontal">
                            <ComboBox x:Name="comboboxInorout" Width="81" 
                              Margin="0 0 0 0"
                              materialDesign:HintAssist.Hint="门诊/住院号">
                                                            <ComboBoxItem Content="门诊号"/>
                                                            <ComboBoxItem Content="住院号"/>
                                                        </ComboBox>
                            <TextBox x:Name="textBoxHospitalId" Margin="10 0 0 0" Width="63" VerticalAlignment="Center" TextChanged="textBoxHospitalId_TextChanged"/>
                            <TextBlock Text="报卡单位："  
                                   Margin="30 0 0 0"
                                   VerticalAlignment="Center"/>
                            <TextBox x:Name="textBoxReportHospitalName" Margin="5 0 0 0" Width="185" VerticalAlignment="Center" Text="文龙街道社区卫生服务中心" />
                            <TextBlock Text="报卡医师：" VerticalAlignment="Center" Margin="30 0 0 0"  />
                            <TextBox x:Name="textBoxReportDoctorName" Margin="0 0 0 0" Width="70" VerticalAlignment="Center"/>

                            <TextBlock Text="报卡日期：" VerticalAlignment="Center" 
                                       Margin="30 0 0 0"/>
                            <DatePicker
                                x:Name="datapickerReportDate"
                                Width="100"
                                Margin="5 0 0 5"/>

                        </StackPanel>   
                  
                        
                    </Grid>
                    
                </Grid>
            </Border>
            <Border
            Grid.Row="1"
            Margin="10,5,10,5"
            Background="WhiteSmoke"
            CornerRadius="10">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="病人信息" FontSize="14" FontFamily="微软雅黑"  FontWeight="Heavy" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0 0 0"></TextBlock>
                    <Line X1="20" Y1="30" X2="100" Y2="30" Stroke="Gray" StrokeThickness="1"/>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Margin="20 0 0 0" Orientation="Horizontal">
