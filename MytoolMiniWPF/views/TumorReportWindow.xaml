                            <TextBox x:Name="textBoxPatientName" VerticalAlignment="Center" Width="70"/>
                            <TextBlock Text="性别：" VerticalAlignment="Center" Margin="30 0 0 0"/>

                            <ComboBox x:Name="comboboxPatientGender"
                                       materialDesign:HintAssist.Hint="性别"
                                      Margin="0 0 0 0"
                                      Width="60"
                                      >
                                <ComboBoxItem Content="男"/>
                                <ComboBoxItem Content="女"/>
                            </ComboBox>
                            <TextBlock Text="出生日期："  Margin="30 0 0 0"  VerticalAlignment="Center"/>

                            <DatePicker Width="130" Margin="0 0 0 5"
                                        Name="datepickerBornDate"
                                        >
                            </DatePicker>
                            <TextBlock Text="文化程度："  Margin="30 0 0 0"  VerticalAlignment="Center"/>

                            <ComboBox x:Name="comboboxEducation" Margin="0 0 0 0"
                                      Width="85"
                                    >
                                <ComboBoxItem Content="不详"/>
                                <ComboBoxItem Content="文盲"/>
                                <ComboBoxItem Content="学龄前儿童"/>
                                <ComboBoxItem Content="小学"/>
                                <ComboBoxItem Content="初中"/>
                                <ComboBoxItem Content="高中"/>
                                <ComboBoxItem Content="大学专科"/>
                                <ComboBoxItem Content="大学本科"/>
                                <ComboBoxItem Content="研究生"/>
                            </ComboBox>
                            <TextBlock Text="年龄：" Margin="30 0 0 0 " VerticalAlignment="Center"/>
                            <TextBox x:Name="textBoxPatientAge" Width="50" VerticalAlignment="Center"/>
                            <TextBlock Text="岁" Margin="5 0 0 0 " VerticalAlignment="Center"/>
                            
                            
                        </StackPanel>
                        <StackPanel Grid.Row="1" Margin="20 0 0 0 " Orientation="Horizontal">
                            
                            <TextBlock Text="婚姻状况：" Margin="0 0 0 0 " VerticalAlignment="Center"/>
                            <ComboBox Margin="0 0 0 0" x:Name="comboboxMarriage" Width="70"
                                      materialDesign:HintAssist.Hint="婚姻状况"
                                       Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      >
                                <ComboBoxItem Content="未婚"/>
                                <ComboBoxItem Content="已婚"/>
                                <ComboBoxItem Content="同居"/>
                                <ComboBoxItem Content="离婚"/>
                                <ComboBoxItem Content="丧偶"/>
                                <ComboBoxItem Content="不详"/>
                            </ComboBox>
                            <TextBlock Text="民族：" Margin="30 0 0 0 " VerticalAlignment="Center"/>
                            <TextBox x:Name="textBoxPatientNation" Width="60" VerticalAlignment="Center"/>

                            <TextBlock Text="职业：" VerticalAlignment="Center" Margin="30 0 0 0"/>
                            <ComboBox x:Name="comboboxVocation"
                                  materialDesign:HintAssist.Hint="职业"
                                       Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                  Width="183"
                                      Margin="5 0 0 0"
                                  >
                                <ComboBoxItem Content="业技人员"/>
                                <ComboBoxItem Content="办事人员和有关人员"/>
                                <ComboBoxItem Content="商业、服务业人员"/>
                                <ComboBoxItem Content="农、林、牧、渔、水利业生产人员"/>
                                <ComboBoxItem Content="生产、运输设备操作人员及有关人员"/>
                                <ComboBoxItem Content="婴幼儿、学龄前儿童"/>
                                <ComboBoxItem Content="学生"/>
                                <ComboBoxItem Content="家务"/>
                                <ComboBoxItem Content="无业"/>
                                <ComboBoxItem Content="军人"/>
                                <ComboBoxItem Content="不便分类的其它从业人员"/>
                            </ComboBox>
                            <TextBlock Text="具体工种：" VerticalAlignment="Center" Margin="30 0 0 0"/>

                            <ComboBox x:Name="comboboxWorkType"
                              Margin=" 5 0 0 0"
                              Width="184"
                              materialDesign:HintAssist.Hint="具体工种"
                              Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                              >
                                                    <ComboBoxItem Content="1.专业技术人员"/>
                                <ComboBoxItem Content="2.行政办公人员"/>
                                <ComboBoxItem Content="3.安全保卫和消防人员"/>
                                <ComboBoxItem Content="4.邮政和电信业务人员"/>
                                <ComboBoxItem Content="5.其他办事人员和有关人员"/>
                                <ComboBoxItem Content="6.购销人员"/>
                                <ComboBoxItem Content="7.仓储人员"/>
                                <ComboBoxItem Content="8.餐饮服务人员"/>
                                <ComboBoxItem Content="9.饭店、旅游及健身娱乐场所服务人员"/>
                                <ComboBoxItem Content="10.运输服务人员"/>
                                <ComboBoxItem Content="11.医疗卫生辅助服务人员"/>
                                <ComboBoxItem Content="12.社会服务和居民生活服务人员"/>
                                <ComboBoxItem Content="13.其他商业、服务业人员 "/>
                                <ComboBoxItem Content="14.种植业生产人员"/>
                                <ComboBoxItem Content="15.林业生产及野生动植物保护人员"/>
                                <ComboBoxItem Content="16.畜牧业生产人员"/>
                                <ComboBoxItem Content="17.渔业生产人员"/>
                                <ComboBoxItem Content="18.水利设施管理养护人员"/>
                                <ComboBoxItem Content="19.其他农、林、牧、渔、水利业生产人员"/>
                                <ComboBoxItem Content="20.勘探及矿物开采人员"/>
                                <ComboBoxItem Content="21.金属冶炼、轧制人员"/>
                                <ComboBoxItem Content="23.化工产品生产人员"/>
                                <ComboBoxItem Content="24.机械制造加工人员"/>
                                <ComboBoxItem Content="25.机电产品装配人员"/>
                                <ComboBoxItem Content="26.机械设备修理人员"/>
                                <ComboBoxItem Content="27.电力设备安装、运行、检修及供点人员 "/>
                                <ComboBoxItem Content="28.电子元器件与设备制造、装配、调试及维修人员"/>
                                <ComboBoxItem Content="29.橡胶和塑料制品生产人员 30 纺织、针织、印染人员 "/>
                                <ComboBoxItem Content="31.裁剪、缝纫和皮革、毛皮制品加工制作人员"/>
                                <ComboBoxItem Content="32.粮油、食品、饮料生产加工及饲料生产加工人员"/>
                                <ComboBoxItem Content="33.烟草及其制品加工人员 "/>
                                <ComboBoxItem Content="34.药品生产人员 "/>
                                <ComboBoxItem Content="35.木材加工、人造板生产、木制品制作及制浆、造纸和纸制品生产加工人员建筑材料生产、加工人员"/>
                                <ComboBoxItem Content="36.玻璃、陶瓷、搪瓷及其制品生产加工人员"/>
                                <ComboBoxItem Content="37.广播影视制品制作、播放及文物保护作业人员印刷人员 "/>
                                <ComboBoxItem Content="38.工艺、美术品制作人员 "/>
                                <ComboBoxItem Content="39.文化教育、体育用品制作人员 "/>
                                <ComboBoxItem Content="40.工程施工人员 "/>
                                <ComboBoxItem Content="41.运输设备操作人员及有关人员环境监测与废物处理人员"/>
                                <ComboBoxItem Content="42.检验、计量人员 "/>
                                <ComboBoxItem Content="43.其他生产、运输设备操作人员及有关人员"/>
                                <ComboBoxItem Content="44.婴幼儿、学龄前儿童"/>
                                <ComboBoxItem Content="45.学生 "/>
                                <ComboBoxItem Content="46.家务 "/>
                                <ComboBoxItem Content="47.无业"/>
                                <ComboBoxItem Content="48.军人 "/>
                                <ComboBoxItem Content="49.不便分类的其他从业人员"/>

                            </ComboBox>
                            
                        </StackPanel>

                        <StackPanel Grid.Row="2" Margin="20 0 0 0 " Orientation="Horizontal">
                            <TextBlock Text="身份证号码：" VerticalAlignment="Center"/>
                            <TextBox x:Name="textboxIdcardNumber" VerticalAlignment="Center" Width="337"/>

                            <TextBlock Text="现住址：" VerticalAlignment="Center" Margin="42 0 0 0"/>
                            <TextBox x:Name="textBoxCurrentAddress" VerticalAlignment="Center" Width="290"/>


                        </StackPanel>
                        <StackPanel Margin="20 0 0 0" Orientation="Horizontal" Grid.Row="3">
                            <TextBlock Text="联系人1：" VerticalAlignment="Center"/>
                            <TextBox x:Name="textBoxFirstContact" VerticalAlignment="Center" Width="50"  />
                            <TextBlock Text="电话1："  Margin="22 0 0 0" VerticalAlignment="Center"/>
                            <TextBox x:Name="textBoxFirstContactPhone" VerticalAlignment="Center" Width="100" />
                            <TextBlock Text="关系："  Margin="22 0 0 0" VerticalAlignment="Center"/>
                            <ComboBox x:Name="comboboxFirstContactRelation"
                                      Margin="5 0 0 0 "
                                       materialDesign:HintAssist.Hint="与患者关系">
                                <ComboBoxItem Content="本人"/>
                                <ComboBoxItem Content="家属"/>
                                <ComboBoxItem Content="朋友"/>
                                <ComboBoxItem Content="工作单位"/>
                                <ComboBoxItem Content="不详"/>
                            </ComboBox>

                            <TextBlock Text="户籍地址：" VerticalAlignment="Center" Margin="30 0 0 0"/>
                            <TextBox x:Name="textBoxHouseholdRegistrationAddress" VerticalAlignment="Center" Width="290"/>


                        </StackPanel>
                        <StackPanel Margin="20 0 0 0 " Orientation="Horizontal" Grid.Row="4">
                            <TextBlock Text="联系人2：" Margin="00 0 0 0" VerticalAlignment="Center"/>
                            <TextBox x:Name="textBoxSecondContact" VerticalAlignment="Center" Width="50"  />
                            <TextBlock Text="电话2："  Margin="22 0 0 0" VerticalAlignment="Center"/>
                            <TextBox x:Name="textBoxSecondContactPhone" VerticalAlignment="Center" Width="100" />
                            <TextBlock Text="关系："  Margin="22 0 0 0" VerticalAlignment="Center"/>

                            <ComboBox x:Name="comboboxSecondContactRelation"
                                Margin="5 0 0 0 "
                                 materialDesign:HintAssist.Hint="与患者关系">
                                <ComboBoxItem Content="本人"/>
                                <ComboBoxItem Content="家属"/>
                                <ComboBoxItem Content="朋友"/>
                                <ComboBoxItem Content="工作单位"/>
                                <ComboBoxItem Content="不详"/>
                            </ComboBox>

                            <TextBlock Text="工作单位：" VerticalAlignment="Center" Margin="30 0 0 0"/>
                            <TextBox x:Name="textBoxWorkAddress" VerticalAlignment="Center" Width="290"/>






                        </StackPanel>
                        <StackPanel Grid.Row="6" Margin="20 0 0 0 " Orientation="Horizontal">
                            <TextBlock Text="病人是否知情？" VerticalAlignment="Center" Margin=" 0 0 0 0"/>
                            <RadioButton x:Name="radiobtnKnown" Content="是"/>
                            <RadioButton x:Name="radiobtnUnknown" Margin="5 0 0 0" Content="否"/>
                            <ComboBox x:Name="comboboxSurvivalStatus"
                                    Margin="30 0 0 0"  
                                    BorderThickness="0"
                                    materialDesign:HintAssist.Hint="生存状态"
           Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                                      MouseLeave="comboboxSurvivalStatus_MouseLeave"
          >
                                <ComboBoxItem Content="存活"/>
                                <ComboBoxItem Content="死亡"/>
                                <ComboBoxItem Content="失访"/>
                                <ComboBoxItem Content="拒访"/>
                            </ComboBox>
                            <DatePicker Width="80" Margin="30 0 0 0"
                                            materialDesign:HintAssist.Hint="死亡时间"
                                            Name="datePickerDeathTime"
                                            BorderThickness="0"
                                            IsEnabled="False"
                                            Style="{StaticResource MaterialDesignFloatingHintDatePicker}"
                                             Foreground="{StaticResource NotRequird}"
            >
                            </DatePicker>
                            <TextBox x:Name="textBoxDeathReason" Width="80" VerticalAlignment="Center" IsEnabled="False" 
                                     Margin="30 0 0 0"
                                     materialDesign:HintAssist.Hint="死亡原因"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                                                        <TextBox x:Name="textBoxDeathIcd" Width="100" VerticalAlignment="Center" IsEnabled="False"
                                     Margin="30 0 0 0"
                                     materialDesign:HintAssist.Hint="死亡ICD10编码"
                                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                     />
                                                        <TextBox x:Name="textBoxDeathIcdName" Width="100" VerticalAlignment="Center" IsEnabled="False"
                                         Margin="30 0 0 0"
                                         materialDesign:HintAssist.Hint="死亡ICD名称"
                                         Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                                         />
                        </StackPanel>
                    
                    </Grid>
                
                </Grid>
            </Border>
            <Border
            Grid.Row="2"
            Margin="10,5,10,5"
            Background="WhiteSmoke"
            CornerRadius="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="30"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="诊断信息" FontSize="14" FontFamily="微软雅黑"  FontWeight="Heavy" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="20 0 0 0"></TextBlock>
                    <Line X1="20" Y1="30" X2="100" Y2="30" Stroke="Gray" StrokeThickness="1"/>
                    <Grid Grid.Row="1" Cursor="">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                            <RowDefinition Height="35"/>
                      
                        </Grid.RowDefinitions>
                        <StackPanel Grid.Row="0" Margin="20 0 0 0" Orientation="Horizontal">
                            <TextBlock Text="是否多发肿瘤?" VerticalAlignment="Center"/>
                            <StackPanel Orientation="Horizontal">
                                <RadioButton x:Name="radioBtnMultTumors" Content="多发"/>
                                <RadioButton x:Name="radioBtnSingleTumors" Content="单一" Margin="5 0 0 0"/>
                            </StackPanel>
                            <TextBlock Text="发病日期：" VerticalAlignment="Center" Margin="30 0 0 0"  Foreground="{StaticResource Requird}"/>
                            <DatePicker Name="datepickerOnsetDate" Width="100" Margin="5 0 0 5"
                                        >
