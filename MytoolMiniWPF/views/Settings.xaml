                    <Button
                        x:Name="btnReadAcuteBronchitis"
                        Grid.Row="5"
                        Grid.Column="3"
                        Height="30"
                        Margin="5,2,5,2"
                        Click="btnReadAcuteBronchitis_Click"
                        Content="Read"
                        Style="{StaticResource BtnTemplate}" />

                    <Button
                        x:Name="btnReadApoplexy"
                        Grid.Row="6"
                        Grid.Column="3"
                        Height="30"
                        Margin="5,2,5,2"
