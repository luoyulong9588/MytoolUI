                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />

                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="45" />
                        <ColumnDefinition Width="80" />
                        <ColumnDefinition Width="80" />
                    </Grid.ColumnDefinitions>
                    <Label
                        Name="labelDbPath"
                        Grid.Row="0"
                        Grid.Column="0"
                        Content="SqlieDb:"
                        Style="{StaticResource factoryLabel}" />
                    <Label
                        Name="labelCopd"
                        Grid.Row="1"
                        Grid.Column="0"
                        Content="慢性阻塞性肺病:"
                        Style="{StaticResource factoryLabel}" />
                    <Label
