                        Style="{StaticResource BtnTemplate}" />

                    <Button
                        x:Name="btnReadTumor"
                        Grid.Row="8"
                        Grid.Column="3"
                        Height="30"
                        Margin="5,2,5,2"
                        Click="btnReadTumor_Click"
                        Content="Read"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnSaveCopd"
                        Grid.Row="1"
                        Grid.Column="4"
                        Height="30"
                        Margin="5,2,5,2"
                        Click="btnSaveCopd_Click"
                        Content="Save"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnSaveChronicBronchitis"
                        Grid.Row="2"
                        Grid.Column="4"
                        Height="30"
                        Margin="5,2,5,2"
                        Click="btnSaveChronicBronchitis_Click"
                        Content="Save"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnSaveAsthma"
                        Grid.Row="3"
                        Grid.Column="4"
                        Height="30"
                        Margin="5,2,5,2"
                        Click="btnSaveAsthma_Click"
                        Content="Save"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnSaveEmphysema"
                        Grid.Row="4"
                        Grid.Column="4"
                        Height="30"
                        Margin="5,2,5,2"
                        Click="btnSaveEmphysema_Click"
                        Content="Save"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnSaveAcuteBronchitis"
                        Grid.Row="5"
                        Grid.Column="4"
                        Height="30"
