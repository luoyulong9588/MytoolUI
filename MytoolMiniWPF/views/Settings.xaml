                    <Label
                        Name="labelAsthma"
                        Grid.Row="3"
                        Grid.Column="0"
                        Content="哮喘:"
                        Style="{StaticResource factoryLabel}" />
                    <Label
                        Name="labelEmphysema"
                        Grid.Row="4"
                        Grid.Column="0"
                        Content="肺气肿:"
                        Style="{StaticResource factoryLabel}" />
                    <Label
                        Name="labelAcuteBronchitis"
                        Grid.Row="5"
                        Grid.Column="0"
                        Content="急性支气管炎:"
                        Style="{StaticResource factoryLabel}" />
                    <Label
                        Name="labelApoplexy"
                        Grid.Row="6"
                        Grid.Column="0"
                        Content="心脑血管卒中:"
                        Style="{StaticResource factoryLabel}" />
                    <Label
                        Name="labelAdmissionCertificate"
                        Grid.Row="7"
                        Grid.Column="0"
                        Content="住院证:"
                        Style="{StaticResource factoryLabel}" />
                    <Label
                        Name="labelTumor"
                        Grid.Row="8"
                        Grid.Column="0"
                        Content="肿瘤报卡:"
                        Style="{StaticResource factoryLabel}" />

                    <Border
                        Grid.Row="0"
                        Grid.Column="1"
                        Margin="5,6,5,6"
                        BorderBrush="#FFCECECE"
                        BorderThickness="0,0,0,1"
                        CornerRadius="0">
                        <TextBlock
                            x:Name="textBlockDbPath"
                            Style="{StaticResource factoryTextBlock}"
                            Text="config\\data.db" />
                    </Border>


                    <Border
                        Grid.Row="1"
                        Grid.Column="1"
                        Margin="5,6,5,6"
                        BorderBrush="#FFCECECE"
                        BorderThickness="0,0,0,1"
                        CornerRadius="0">
                        <TextBlock x:Name="textBlockCopd" Style="{StaticResource factoryTextBlock}" />
                    </Border>
                    <Border
                        Grid.Row="2"
                        Grid.Column="1"
                        Margin="5,6,5,6"
                        BorderBrush="#FFCECECE"
                        BorderThickness="0,0,0,1"
                        CornerRadius="0">
                        <TextBlock x:Name="textBlockChronicBronchitis" Style="{StaticResource factoryTextBlock}" />
                    </Border>
                    <Border
                        Grid.Row="3"
                        Grid.Column="1"
                        Margin="5,6,5,6"
                        BorderBrush="#FFCECECE"
                        BorderThickness="0,0,0,1"
                        CornerRadius="0">
                        <TextBlock x:Name="textBlockAsthma" Style="{StaticResource factoryTextBlock}" />
                    </Border>
                    <Border
                        Grid.Row="4"
                        Grid.Column="1"
                        Margin="5,6,5,6"
                        BorderBrush="#FFCECECE"
                        BorderThickness="0,0,0,1"
                        CornerRadius="0">
                        <TextBlock x:Name="textBlockEmphysema" Style="{StaticResource factoryTextBlock}" />
                    </Border>
                    <Border
                        Grid.Row="5"
                        Grid.Column="1"
                        Margin="5,6,5,6"
                        BorderBrush="#FFCECECE"
                        BorderThickness="0,0,0,1"
                        CornerRadius="0">
                        <TextBlock x:Name="textBlockAcuteBronchitis" Style="{StaticResource factoryTextBlock}" />
                    </Border>
                    <Border
                        Grid.Row="6"
                        Grid.Column="1"
                        Margin="5,6,5,6"
                        BorderBrush="#FFCECECE"
                        BorderThickness="0,0,0,1"
                        CornerRadius="0">
                        <TextBlock x:Name="textBlockApoplexy" Style="{StaticResource factoryTextBlock}" />
                    </Border>
                    <Border
                        Grid.Row="7"
                        Grid.Column="1"
                        Margin="5,6,5,6"
                        BorderBrush="#FFCECECE"
                        BorderThickness="0,0,0,1"
                        CornerRadius="0">
                        <TextBlock x:Name="textBlockAdmissionCertificate" Style="{StaticResource factoryTextBlock}" />
                    </Border>
                    <Border
                        Grid.Row="8"
                        Grid.Column="1"
                        Margin="5,6,5,6"
                        BorderBrush="#FFCECECE"
                        BorderThickness="0,0,0,1"
                        CornerRadius="0">
                        <TextBlock x:Name="textBlockTumor" Style="{StaticResource factoryTextBlock}" />
                    </Border>

                    <Button
                        x:Name="btnBrowseDb"
                        Grid.Row="0"
                        Grid.Column="2"
                        Width="45"
                        Height="30"
                        Margin="0,2,0,2"
                        Click="btnBrowseDb_Click"
                        Content="..."
                        FontSize="14"
                        FontWeight="Bold"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnBrowseCopd"
                        Grid.Row="1"
                        Grid.Column="2"
                        Width="45"
                        Height="30"
                        Margin="0,2,0,2"
                        Click="btnBrowseCopd_Click"
                        Content="..."
                        FontSize="14"
                        FontWeight="Bold"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnBrowseChronicBronchitis"
                        Grid.Row="2"
                        Grid.Column="2"
                        Width="45"
                        Height="30"
                        Margin="0,2,0,2"
                        Click="btnBrowseChronicBronchitis_Click"
                        Content="..."
                        FontSize="14"
                        FontWeight="Bold"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnBrowseAsthma"
                        Grid.Row="3"
                        Grid.Column="2"
                        Width="45"
                        Height="30"
                        Margin="0,2,0,2"
                        Click="btnBrowseAsthma_Click"
                        Content="..."
                        FontSize="14"
                        FontWeight="Bold"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnBrowseEmphysema"
                        Grid.Row="4"
                        Grid.Column="2"
                        Width="45"
                        Height="30"
                        Margin="0,2,0,2"
                        Click="btnBrowseEmphysema_Click"
                        Content="..."
                        FontSize="14"
                        FontWeight="Bold"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnBrowseAcuteBronchitis"
                        Grid.Row="5"
                        Grid.Column="2"
                        Width="45"
                        Height="30"
                        Margin="0,2,0,2"
                        Click="btnBrowseAcuteBronchitis_Click"
                        Content="..."
                        FontSize="14"
                        FontWeight="Bold"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnBrowseApoplexy"
                        Grid.Row="6"
                        Grid.Column="2"
                        Width="45"
                        Height="30"
                        Margin="0,2,0,2"
                        Click="btnBrowseApoplexy_Click"
                        Content="..."
                        FontSize="14"
                        FontWeight="Bold"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnBrowseAdmissionCertificate"
                        Grid.Row="7"
                        Grid.Column="2"
                        Width="45"
                        Height="30"
                        Margin="0,2,0,2"
                        Click="btnBrowseAdmissionCertificate_Click"
                        Content="..."
                        FontSize="14"
                        FontWeight="Bold"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnBrowseTumor"
                        Grid.Row="8"
                        Grid.Column="2"
                        Width="45"
                        Height="30"
                        Margin="0,2,0,2"
                        Click="btnBrowseTumor_Click"
                        Content="..."
                        FontSize="14"
                        FontWeight="Bold"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnReadCopd"
                        Grid.Row="1"
                        Grid.Column="3"
                        Height="30"
                        Margin="5,2,5,2"
                        Click="btnReadCopd_Click"
                        Content="Read"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnReadChronicBronchitis"
                        Grid.Row="2"
                        Grid.Column="3"
                        Height="30"
                        Margin="5,2,5,2"
                        Click="btnReadChronicBronchitis_Click"
                        Content="Read"
                        Style="{StaticResource BtnTemplate}" />


                    <Button
                        x:Name="btnReadAsthma"
                        Grid.Row="3"
                        Grid.Column="3"
                        Height="30"
                        Margin="5,2,5,2"
